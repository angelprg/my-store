<div class="col">
  <div class="card shadow-sm home-card">
    <% if article.image_cover %>
      <%= image_tag url_for(article.image_cover) %>
    <% end %>
    <div class="card-body d-flex flex-column justify-content-between">
      <%= link_to article_path(article.id) do %>
      <h5 class="card-title text-center"><%= article.name %></h5>
      <% end%>
      <div class="d-flex flex-column justify-content-between ">
        <small class="text-muted text-center mb-1"><%= number_to_currency(article.price) %></small>
        <div class="btn-group">
          <%= link_to 'View', article_path(article.id), class: "btn btn-sm btn-outline-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
