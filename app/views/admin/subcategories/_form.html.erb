<%= form_with(model: [:admin, subcategory]) do |form| %>
  <% if subcategory.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(subcategory.errors.count, "error") %> prohibited this subcategory from being saved:</h2>
      <ul>
        <% subcategory.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <table class="table table-striped table-hover">
  <tr>
    <td><%= form.label :name, style: "display: block" %></td>
    <td><%= form.text_field :name %></td>
  </tr>
  <tr>
    <td><%= form.label :description, style: "display: block" %></td>
    <td><%= form.text_field :description %></td>
  </tr>
  <tr>
    <td><%= form.label :category_id, style: "display: block" %></td>
    <td><%= form.collection_select :category_id, Category.order(:name), :id, :name %></td>
  </tr>
  <tr>
    <td><%= form.label :image_cover, style: "display: block" %></td>
    <td><%= form.file_field :image_cover %></td>
  </tr>

  </table>
  <div>
    <%= form.submit class:"btn btn-success" %>
  </div>
<% end %>
