<div class="container-fluid">
  <div class="row">
    <%= render 'admin/sidebar' %>
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <%= render partial: 'admin/header' , locals: {title: 'Subcategories'} %>
      <%= link_to "New subcategory", new_admin_subcategory_path, class: "btn btn-primary" %>
      <div id="subcategories">
        <% @subcategories.each do |subcategory| %>
          <%= render partial: "subcategory_card", locals: {subcategory: subcategory} %>
        <% end %>
      </div>
    </main>
  </div>
</div>
