<div class="container-fluid">
  <div class="row">
    <%= render 'admin/sidebar' %>
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <%= render partial: 'admin/header' , locals: {title: 'Editing article'}%>
      <%= render "form", article: @article, categories: @categories, subcategories: @subcategories %>
      <br>
      <div>
        <%= link_to "Show this article", admin_article_url(@article) %> |
        <%= link_to "Back to articles", admin_articles_path %>
      </div>
    </main>
  </div>
</div>
